<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/nav_layout_small"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_blue">

        <ImageView
            android:id="@+id/ad_icon"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ad_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="node_is_temporarily_unavailable"
            android:textColor="#FF1A1A1A"
            android:textSize="14sp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintEnd_toStartOf="@id/ad_call"
            app:layout_constraintTop_toTopOf="@id/ad_icon"
            app:layout_constraintStart_toEndOf="@id/ad_icon"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ad_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#FF666666"
            android:maxLines="2"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintEnd_toStartOf="@id/ad_call"
            app:layout_constraintStart_toEndOf="@id/ad_icon"
            app:layout_constraintTop_toBottomOf="@id/ad_title"
            app:layout_constraintBottom_toBottomOf="@id/ad_icon"
            android:text="node_is_temporarily_unavailable_is_temporarily"/>

        <TextView
            android:id="@+id/ad_call"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:minWidth="68dp"
            android:text="INSTALL"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/ad_install"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ad_title"/>

        <TextView
            android:id="@+id/tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AD"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="1dp"
            android:background="@drawable/big_ad_install"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.gms.ads.nativead.NativeAdView>